<div class= "title">
<h1>Eat-Da-Burger!</h1>
</div>
<div class= "pic">
<img width ="200" height = "200" src="../assets/img/burger.png"/>
</div>

<div class="mother">
<div class="left">
{{!--<h2>un-devoured!</h2>--}}


<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!!</button>
        </form>

       
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="right">
{{!--<h2>devoured!</h2>--}}

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          {{!--<button type="submit">Un Devour!</button>--}}
        </form>

        
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

</div>

<div class="footer">
<h1>Add a burger</h1>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <div class="hide">
    <label for="slee">devoured?</label><br>
    <input type="radio" name="devoured" value="1" > Devoured!<br>
    <input type="radio" name="devoured" value="0"checked> Un Devoured
    </div>
  </div>

  <button type="submit">Add burger</button>
</form>

</div>
